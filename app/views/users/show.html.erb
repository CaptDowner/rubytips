<!--  Show page for User model-->
<table class='tip-top'>
  <tr>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
    <td><h1>Ruby Talk Tips Users</h1></td>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
  </tr>
</table>

<div class='uzer-show'>

  <table>
    <tr><td class="reddy1"width="36%">Firstname:</td><td><%= @user.firstname %></td></tr>
    <tr><td class="reddy1">Lastname:</td><td><%= @user.lastname %></td></tr>
    <tr><td class="reddy1">Email:</td><td><%= @user.email %></td></tr>
    <tr><td class="reddy1"></td><td></td></tr>
  </table>

</div> <!-- end div:uzer-show -->

  <table class='foot-buttons'>
    <tr>
      <% if !current_user %>
        <td><%= button_to 'Register',  signup_path,           { class: 'buttonTo', :method :get } %></td>
        <td><%= button_to 'Sign In',   new_session_path,      { class: 'buttonTo', :method :get } %></td>
        <td><%= button_to 'Tips',      tips_path,             { class: 'buttonTo', method: :get } %></td>
      <% else %>
        <td><%= button_to 'Edit User', edit_user_path(@user), { class: 'buttonTo', method: :get } %></td>
        <td><%= button_to 'Users',     users_path,            { class: 'buttonTo', method: :get } %></td>
        <td><%= button_to 'Tips',      tips_path,             { class: 'buttonTo', method: :get } %></td>
        <td><%= button_to 'Sign Out',  session_path,          { class: 'buttonTo', method: :delete, confirm: 'Sign out #{current_user.firstname} #{current_user.lastname}?'} %></td>
        <% if current_user_or_admin? %>
          <td><%= button_to 'Delete',   user_path,            { class: 'buttonTo', method: :delete,  confirm: 'Delete user: #{@user.firstname} #{@user.lastname}?'}  %></td>
        <% end %>
      <% end %>
 </tr>
  </table>

