<!-- Index page for User model-->
<script>
$('.userz table').tablesorter({
   widgets: ['zebra'],
   widgetZebra: {css: ["NormRow","AltRow"]} // css classes to apply to rows
});
</script>
<style>
.pnation {
  margin-top: -12px;
  border: 0;
}

.pnation td{
  font-weight: normal;
  text-align: center;
  font-size: 14px;
}
</style>

<table class='tip-top'>
  <tr>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
    <td><h1>Ruby Talk Tips Users</h1></td>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
  </tr>
</table>
<br/>
<div class='userz'>
  <table>
    <thead>
      <tr>
        <th align="left"><%= sortable "firstname", "Firstname" %></th>
        <th align="left"><%= sortable "lastname", "Lastname" %></th>
        <th align="left"><%= sortable "email", "Email" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= cycle('NormRow', 'AltRow') %>">
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td class='e-mail'><%= user.email %></td>
          <td class='sed'>&nbsp;&nbsp;<%= link_to 'Show', user %>&nbsp;&nbsp;<%= link_to 'Edit', edit_user_path(user) %>&nbsp;</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> <!-- end div:userz -->
<table class='pnation'>
  <tr>
    <td colspan='3'><%= paginate @users %></td>
  </tr>
</table>

<table class='foot-buttons'>
  <tr>
    <td> colspan='3'><%= paginate @users %></td>
  </tr>
    <tr>
    <td><%= button_to 'Tips',       tips_path,        {class: 'buttonTo', method: :get} %></td>
    <td><%= button_to 'About',      root_path,        {class: 'buttonTo', method: :get} %></td>
    <% if !current_user %>
      <td><%= button_to 'Sign In',  new_session_path, {class: 'buttonTo', method: :get} %></td>
      <td><%= button_to 'Register', new_user_path,    {class: 'buttonTo', method: :get} %></td>
    <% else %>
      <td><%= button_to "Sign Out", session_path,     {class: 'buttonTo', method: :delete, confirm: "Sign out #{current_user.firstname} #{current_user.lastname}?"} %></td>
    <% end %>
  </tr>
</table>

