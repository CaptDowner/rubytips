<center>
<table class='tip-top'>
  <tr>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
    <td><h1>Ruby Tips</h1></td>
    <td><img src='/assets/ruby.png' width='15' height='15'></td>
  </tr>
</table>

<%= form_tag tips_path, :method => 'get'  do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<%= paginate @tips %>

<table>
  <thead>
  <tr>

    <th align="left"><%= sortable "rubytype","Type" %></th>
    <th align="left"><%= sortable "subject", "Subject" %></th>
    <th align="left"><%= sortable "category", "Keywords" %></th>
    <th align="left"><%= sortable "email","Email" %></th>
    <th align="left"><%= sortable "source", "Source" %></th>
    <th></th>
    <th></th>
<!--    <th></th> -->
  </tr>
  </thead>
  <tbody>
<% @tips.each do |tip| %>
  <tr class="<%= cycle('even', 'odd') -%>">
    <td><%= tip.rubytype %></td>
    <td><%= tip.subject %></td>
    <td><%= tip.category %></td>
    <td><%= obscure_email(tip.email).html_safe %></td>
    <td><%= tip.source %></td>
    <td class='idx-a'><%= link_to 'Show', tip %></td>
    <td class='idx-a'><%= link_to 'Edit', edit_tip_path(tip) %></td>
<!--    <td class='idx-a'>< % = link_to 'Destroy', tip, confirm: 'Are you sure?', method: :delete %></td> -->
  </tr>
<% end %>

  </tbody>
</table>
<br />
<strong><%= paginate @tips %><br />
<%= link_to 'New Tip', new_tip_path %>
</strong>
</center>
